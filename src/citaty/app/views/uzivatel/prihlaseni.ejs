<%- include('../_layout/header') %>
    <div class="wrapper">
        <div class="bg">
            <div class="grad"></div>
            <img class="bg_img" src="/data_web/bg.png" alt="">
        </div>
    
        <div class="container" style="display: flex; z-index: 10;align-items: center;">
            <div class="login-cont">
                <div class="login-nadpis">
                    <h3>Přihlásit se</h3>
                </div>
                
                <div class="login-form-cont">
                    <form method="post" script="/uzivatel/prihlasit">
                        <div class="login-input">
                            <input type="text" name="jmeno" placeholder="Uživatelské jméno" /><br />
                        </div>
    
                        <div class="login-input">
                            <input type="password" name="heslo" placeholder="Heslo" /><br />
                        </div>
                    

                    <% if(error) { %>
                        <div class="err">
                            <p><%= error %></p>
                            <p>!</p>
                        </div>
                        <% } %>

                    <input class="btn" type="submit" value="Přihlásit se" />
                </form>
                </div>
                <p class="reg-text">Nemáš ještě účet?, <a href="/uzivatel/registrovat"> zaregistruj se!</a></p>
            </div>
        </div>
    </div>
<%- include('../_layout/footer') %>




